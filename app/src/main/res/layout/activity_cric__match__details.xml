<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_userinterface"
    tools:context=".Cric_Match_Details">

    <FrameLayout
        android:id="@+id/fragment_cric_match_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_nav_cric_match_details" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav_cric_match_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#87ceeb"
        android:elevation="8dp"
        app:itemTextColor="#fff"
        app:menu="@menu/bottom_nav_cric_match_details" />


</RelativeLayout>